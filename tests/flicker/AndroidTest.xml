<configuration description="Runs WindowManager Flicker Tests">
    <target_preparer class="com.google.android.tradefed.targetprep.GoogleDeviceSetup">
        <!-- keeps the screen on during tests -->
        <option name="screen-always-on" value="on" />
        <!-- prevents the phone from restarting -->
        <option name="force-skip-system-props" value="true" />
    </target_preparer>
    <target_preparer class="com.android.tradefed.targetprep.suite.SuiteApkInstaller">
        <option name="cleanup-apks" value="true"/>
        <option name="test-file-name" value="FlickerTests.apk"/>
        <option name="test-file-name" value="FlickerTestApp.apk" />
    </target_preparer>
    <test class="com.android.tradefed.testtype.AndroidJUnitTest">
        <option name="package" value="com.android.server.wm.flicker"/>
        <option name="shell-timeout" value="6600s" />
        <option name="test-timeout" value="6000s" />
        <option name="hidden-api-checks" value="false" />
    </test>
    <test class="com.android.tradefed.result.LogFilesReporter">
        <option name="upload-dir" value="/sdcard/flicker/" />
        <option name="clean-upload-pattern" value="true" />
    </test>
</configuration>
